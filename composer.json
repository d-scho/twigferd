{
    "name": "d-scho/twigferd",
    "description": "Twig-based implementation of Zugferd invoices",
    "type": "project",
    "license": "BSD-2-Clause",
    "require": {
        "symfony/framework-bundle": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/console": "^7.3",
        "symfony/runtime": "^7.3"
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.89",
        "rector/rector": "^2.2"
    },
    "scripts": {
        "csfix": "vendor/bin/php-cs-fixer fix",
        "phpstan": "vendor/bin/phpstan analyze",
        "rector": "vendor/bin/rector --dry-run",
        "rector:fix": "vendor/bin/rector"
    }
}
